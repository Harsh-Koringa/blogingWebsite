{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "EMAIL_SERVICE": "@email_service",
    "EMAIL_USER": "@email_user",
    "EMAIL_PASS": "@email_pass",
    "FRONTEND_URL": "@frontend_url"
  }
}
